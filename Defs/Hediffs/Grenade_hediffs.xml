  <!-- ############## Poison ############## -->
  <HediffDef ParentName="DiseaseBase">
    <defName>Trunken_hediff_Poison</defName>
    <label>&lt;color=#11bf6b&gt;Poison&lt;/color&gt;</label>
    <defaultLabelColor>(0, 1, 0)</defaultLabelColor>
    <makesAlert>false</makesAlert>
    <tendable>true</tendable>
    <minSeverity>0.01</minSeverity>
    <maxSeverity>0.4</maxSeverity>
    <initialSeverity>0.1</initialSeverity>
    <lethalSeverity>0.4</lethalSeverity>
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <baseTendDurationHours>128</baseTendDurationHours>
        <disappearsAtTotalTendQuality>3</disappearsAtTotalTendQuality>
      </li>
    </comps>
    <stages>
      <li>
        <painOffset>0.2</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.33</setMax>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.33</setMax>
          </li>
        </capMods>
        <hediffGivers>
          <li Class="HediffGiver_Random">
            <hediff>Hangover</hediff>
            <mtbDays>7</mtbDays>
          </li>
          <li Class="HediffGiver_Random">
            <hediff>Heatstroke</hediff>
            <mtbDays>1</mtbDays>
            <partsToAffect>
              <li>Heart</li>
            </partsToAffect>
          </li>
          <li Class="HediffGiver_Random">
            <hediff>Hypothermia</hediff>
            <mtbDays>1</mtbDays>
            <canAffectAnyLivePart>true</canAffectAnyLivePart>
          </li>
        </hediffGivers>
      </li>
    </stages>
  </HediffDef>
