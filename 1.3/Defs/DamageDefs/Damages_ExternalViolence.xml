    <explosionColorEdge>(0.5, 0.5, 0, 0.5)</explosionColorEdge>
    <makesAnimalsFlee>false</makesAnimalsFlee>
    <additionalHediffs>
      <li>
        <hediff>Trunken_hediff_Poison</hediff>
