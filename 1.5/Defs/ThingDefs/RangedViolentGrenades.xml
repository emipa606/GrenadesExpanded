<Defs>
  <!-- ==================== Hornet Nest grenade ========================== -->
  <ThingDef ParentName="BaseMakeableGrenade">
    <defName>Weapon_HornetNest</defName>
    <label>Hornet Nest</label>
    <description>The close to hand hornet nest. They're already angry and willing to sting. Poison build up by too many hornet stings can lead to loss of consciousness and heart attacks.</description>
    <tickerType>Normal</tickerType>
    <recipeMaker>
      <workSpeedStat>MedicalOperationSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
      <effectWorking>Tailor</effectWorking>
      <!-- SmithingSpeed -->
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedBelt</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Projectile/Special/GrenadeNest</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Grenade</soundInteract>
    <techLevel>Neolithic</techLevel>
    <statBases>
      <Mass>15</Mass>
      <RangedWeapon_Cooldown>3</RangedWeapon_Cooldown>
      <MaxHitPoints>75</MaxHitPoints>
      <MarketValue>200</MarketValue>
      <WorkToMake>2500</WorkToMake>
    </statBases>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <costList>
      <WoodLog>5</WoodLog>
      <MedicineHerbal>25</MedicineHerbal>
      <WoolMuffalo>50</WoolMuffalo>
    </costList>
    <thingCategories>
      <li>Grenades</li>
    </thingCategories>
    <verbs>
      <li>
        <!-- throw hive grenade -->
        <verbClass>Verb_LaunchProjectile</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <range>24.5</range>
        <forcedMissRadius>0.5</forcedMissRadius>
        <warmupTime>3</warmupTime>
        <noiseRadius>4</noiseRadius>
        <ai_AvoidFriendlyFireRadius>10</ai_AvoidFriendlyFireRadius>
        <ai_IsBuildingDestroyer>false</ai_IsBuildingDestroyer>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <soundCast>SwooshBees</soundCast>
        <soundCastTail>Hornets_Attack</soundCastTail>
        <defaultProjectile>GrenadeHornet_Nest</defaultProjectile>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
        <requireLineOfSight>true</requireLineOfSight>
        <onlyManualCast>true</onlyManualCast>
      </li>
    </verbs>
  </ThingDef>
  <ThingDef ParentName="BaseGrenadeProjectile">
    <defName>GrenadeHornet_Nest</defName>
    <label>Flying hive</label>
    <thingClass>Projectile_Explosive</thingClass>
    <graphicData>
      <texPath>Things/Projectile/Special/Proj_GrenadeHornets</texPath>
