<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <!-- RimBees -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>RimBees</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="Weapon_HornetNest"]/costList</xpath>
          <value>
            <costList>
              <RB_WildHive_Temperate>1</RB_WildHive_Temperate>
              <MedicineHerbal>25</MedicineHerbal>
              <WoolMuffalo>50</WoolMuffalo>
            </costList>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
  <!-- Misc. Bees'n'Honey -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Misc. Bees'n'Honey</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="Weapon_HornetNest"]/costList</xpath>
          <value>
            <costList>
              <HoneycombWithQueen>1</HoneycombWithQueen>
              <MedicineHerbal>25</MedicineHerbal>
              <WoolMuffalo>50</WoolMuffalo>
            </costList>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
  <!-- RimCuisine 1.0 -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>RimCuisine 1.0</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="Weapon_HornetNest"]/costList</xpath>
          <value>
            <costList>
              <Beehive>1</Beehive>
              <MedicineHerbal>25</MedicineHerbal>
              <WoolMuffalo>50</WoolMuffalo>
            </costList>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>